<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Your custom style for PopupMenu -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">#080808</item> <!-- Change text color -->
        <item name="android:background">#faf9f7</item> <!-- Change background color -->
    </style>

    <!-- Style for sliding popup animation -->
    <style name="SlideUpDownAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>
