<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="600dp"
        android:layout_gravity="center">

    <!--상단 배너-->
    <TextView
            android:id="@+id/background"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#E5EAF1"
            android:gravity="center"
            android:text="SCHEDULE 등록"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="3dp" />


    <View
            android:id="@+id/separator"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            tools:ignore="NotSibling"
            tools:layout_editor_absoluteY="1dp" />

    <!--제목 입력란-->


    <EditText
            android:id="@+id/scheduleSummary"
            android:layout_width="300sp"
            android:layout_height="40dp"
            android:minHeight="24dp"
            app:layout_constraintStart_toEndOf="@+id/summartText"
            app:layout_constraintTop_toTopOf="@+id/summartText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <Switch
            android:id="@+id/repeatScheduleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복 여부"
            android:switchMinWidth="48dp"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/summartText"
            android:layout_marginTop="24dp" />


    <EditText
            android:id="@+id/startDate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintStart_toEndOf="@+id/startText"
            app:layout_constraintTop_toTopOf="@+id/startText" />

    <EditText
            android:id="@+id/timeViewer"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/startDate"
            app:layout_constraintStart_toStartOf="@+id/startDate"
            android:layout_marginTop="15dp" />


    <ImageView
            android:id="@+id/startCalendarButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@+id/startDate"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/startDate"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp" />

    <ImageView
            android:id="@+id/timeSelector"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:focusable="false"
            android:inputType="datetime|time"
            android:foreground="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@+id/startDate"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/timeViewer"
            android:textAllCaps="true"
            android:drawablePadding="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

    <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            tools:layout_editor_absoluteY="528dp"
            tools:layout_editor_absoluteX="156dp" />

    <TextView
            android:text="시작일: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/startText"
            app:layout_constraintTop_toBottomOf="@+id/repeatScheduleSwitch"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />

    <TextView
            android:text="제목: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/summartText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/background"
            android:layout_marginTop="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>