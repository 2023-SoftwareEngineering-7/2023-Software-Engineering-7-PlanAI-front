<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="600dp"
        android:layout_gravity="center">

    <!--상단 배너-->
    <TextView
            android:id="@+id/scheduleBackground"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#E5EAF1"
            android:gravity="center"
            android:text="SCHEDULE 등록"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumbarungothicbold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <!--제목 입력란-->
    <TextView
            android:text="제목: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/scheduleSummaryText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/scheduleBackground"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <EditText
            android:id="@+id/scheduleSummaryView"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:minHeight="24dp"
            app:layout_constraintStart_toEndOf="@+id/scheduleSummaryText"
            app:layout_constraintTop_toTopOf="@+id/scheduleSummaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="-10dp" />

    <!--종일 일정 여부 스위치-->
    <Switch
            android:id="@+id/repeatScheduleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복 여부:   "
            android:switchMinWidth="48dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/scheduleSummaryText"
            android:layout_marginTop="20dp"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <!--시작일 설정부-->
    <TextView
            android:text="시작일: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/scheduleStartDateText"
            app:layout_constraintTop_toBottomOf="@+id/repeatScheduleSwitch"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <TextView
            android:id="@+id/scheduleStartDateView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/scheduleStartDateText"
            app:layout_constraintTop_toTopOf="@+id/scheduleStartDateText"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginTop="-15dp" />

    <View
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/scheduleStartDateView"
            app:layout_constraintEnd_toEndOf="@+id/scheduleStartDateView"
            app:layout_constraintTop_toBottomOf="@+id/scheduleStartDateView"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/scheduleStartCalendarButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@+id/scheduleStartDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/scheduleStartDateView"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp" />

    <!--시작시간 설정부-->
    <TextView
            android:id="@+id/scheduleStartTimeView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/scheduleStartDateView"
            app:layout_constraintStart_toStartOf="@+id/scheduleStartDateView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom" />

    <View
            android:id="@+id/ScheduleStartTimeBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/scheduleStartTimeView"
            app:layout_constraintStart_toStartOf="@+id/scheduleStartTimeView"
            app:layout_constraintEnd_toEndOf="@+id/scheduleStartTimeView"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/scheduleStartTimeButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|time"
            android:foreground="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@+id/scheduleStartDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/scheduleStartTimeView"
            android:textAllCaps="true"
            android:drawablePadding="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp" />


    <!--종료일 설정부-->
    <TextView
            android:text="종료일: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/scheduleEndDateText"
            app:layout_constraintTop_toBottomOf="@+id/ScheduleStartTimeBottomView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <TextView
            android:id="@+id/scheduleEndDateView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/scheduleEndDateText"
            app:layout_constraintTop_toTopOf="@+id/scheduleEndDateText"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginTop="-15dp" />

    <View
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/scheduleEndDateView"
            app:layout_constraintEnd_toEndOf="@+id/scheduleEndDateView"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndDateView"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/scheduleEndCalendarButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@+id/scheduleEndDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/scheduleEndDateView"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp" />

    <!--종료시간 설정부-->
    <TextView
            android:id="@+id/scheduleEndTimeView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndDateView"
            app:layout_constraintStart_toStartOf="@+id/scheduleEndDateView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom" />

    <View
            android:id="@+id/scheduleEndTimeBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndTimeView"
            app:layout_constraintStart_toStartOf="@+id/scheduleEndTimeView"
            app:layout_constraintEnd_toEndOf="@+id/scheduleEndTimeView"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/scheduleEndTimeButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|time"
            android:foreground="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@+id/scheduleEndDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/scheduleEndTimeView"
            android:textAllCaps="true"
            android:drawablePadding="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp" />

    <!--  태그 생성-->

    <TextView
            android:text="태그: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/scheduleTagText"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndTimeBottomView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <Button
            android:id="@+id/scheduleTagShowDropDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#C8F4C8"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/scheduleTagText"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndTimeBottomView"
            android:layout_marginStart="132dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/scheduleTagText"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#000000"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.562" />

    <TextView
            android:id="@+id/scheduleTagView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/scheduleEndTimeBottomView"
            app:layout_constraintStart_toStartOf="@+id/scheduleEndTimeBottomView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:textColor="@color/black" />

    <View
            android:id="@+id/scheduleTagBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="#959595"
            app:layout_constraintTop_toBottomOf="@+id/scheduleTagView"
            app:layout_constraintStart_toStartOf="@+id/scheduleTagView"
            app:layout_constraintEnd_toEndOf="@+id/scheduleTagView"
            android:layout_marginTop="10dp" />

    <!-- 설명추가란-->
    <TextView
            android:text="설명: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/scheduleDescriptionText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/scheduleTagText"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <EditText
            android:id="@+id/scheduleDescriptionView"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:minHeight="24dp"
            app:layout_constraintTop_toTopOf="@+id/scheduleTagView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="12dp" />

    <Button
            android:id="@+id/scheduleFinishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:backgroundTint="#EFC8C8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>