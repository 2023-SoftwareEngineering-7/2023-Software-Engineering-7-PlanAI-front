<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EEE7FB">

        <TextView
                android:id="@+id/scheduleSummaryItemView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="schedule"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/scheduleStartDateItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start"
                android:textSize="16sp" />
        <TextView
                android:id="@+id/scheduleStartTimeItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/scheduleEndDateItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="16sp" />
        <TextView
                android:id="@+id/scheduleEndTimeItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="16sp" />
        <TextView
                android:id="@+id/scheduleDescriptionItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/scheduleTagItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tag"
                android:textSize="16sp" />

    </LinearLayout>




</androidx.cardview.widget.CardView>