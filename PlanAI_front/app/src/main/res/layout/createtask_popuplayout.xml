<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="600dp"
        android:layout_gravity="center">

    <!--상단 배너-->
    <TextView
            android:id="@+id/background"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#E5EAF1"
            android:gravity="center"
            android:text="Task 등록"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumbarungothicbold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <!--제목 입력란-->
    <TextView
            android:text="제목: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/summartText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/background"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <EditText
            android:id="@+id/scheduleSummary"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:minHeight="24dp"
            app:layout_constraintStart_toEndOf="@+id/summartText"
            app:layout_constraintTop_toTopOf="@+id/summartText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="-10dp" />

    <!--종일 일정 여부 스위치-->
    <Switch
            android:id="@+id/repeatScheduleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복 여부:   "
            android:switchMinWidth="48dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/summartText"
            android:layout_marginTop="20dp"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <!--마감일 설정부-->
    <TextView
            android:text="마감일: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/deadLineText"
            app:layout_constraintTop_toBottomOf="@+id/repeatScheduleSwitch"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <TextView
            android:id="@+id/deadLineDate"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/deadLineText"
            app:layout_constraintTop_toTopOf="@+id/deadLineText"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginTop="-15dp" />

    <View
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/deadLineDate"
            app:layout_constraintEnd_toEndOf="@+id/deadLineDate"
            app:layout_constraintTop_toBottomOf="@+id/deadLineDate"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/deadLineCalendarButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@+id/deadLineDate"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/deadLineDate"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp" />

    <!--시작시간 설정부-->
    <TextView
            android:id="@+id/deadLineTime"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/deadLineDate"
            app:layout_constraintStart_toStartOf="@+id/deadLineDate"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom" />

    <View
            android:id="@+id/startTimeBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/deadLineTime"
            app:layout_constraintStart_toStartOf="@+id/deadLineTime"
            app:layout_constraintEnd_toEndOf="@+id/deadLineTime"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/deadLineTimeButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|time"
            android:foreground="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@+id/deadLineDate"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/deadLineTime"
            android:textAllCaps="true"
            android:drawablePadding="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp" />




    <!--  태그 생성-->

    <TextView
            android:text="태그: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tagText"
            app:layout_constraintTop_toBottomOf="@+id/startTimeBottomView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <Button
            android:id="@+id/tagShowDropDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#C8F4C8"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/tagText"
            app:layout_constraintTop_toBottomOf="@+id/endTimeBottomView"
            android:layout_marginStart="132dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/tagText"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#000000"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.562" />

    <TextView
            android:id="@+id/tagTextView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/startTimeBottomView"
            app:layout_constraintStart_toStartOf="@+id/startTimeBottomView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:textColor="@color/black" />

    <View
            android:id="@+id/tagBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="#959595"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:layout_constraintStart_toStartOf="@+id/tagTextView"
            app:layout_constraintEnd_toEndOf="@+id/tagTextView"
            android:layout_marginTop="10dp" />

    <Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:backgroundTint="#EFC8C8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>