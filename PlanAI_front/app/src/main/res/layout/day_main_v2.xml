<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center">

    <!-- 상단 날짜 및 시간 표시 -->
    <TextView
            android:id="@+id/scheduleBackground"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E5EAF1" />

    <!-- 일정 목록 -->

    <TextView
            android:id="@+id/todayMonthView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:text="January"
            android:textAlignment="textStart"
            android:textSize="25dp" />


    <TextView
            android:id="@+id/todayDateNumView"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

    <TextView
            android:id="@+id/todayDateTextView"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

    <include layout="@layout/navigationbar_bottom" />

    <!-- 일정 추가 버튼 -->

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:padding="16dp"
            android:layout_below="@id/scheduleRecyclerView">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="270sp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10sp"
            android:padding="16dp">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:background="#D1D1D1"
            android:contextClickable="false"
            android:foreground="@drawable/plus_icon"
            app:backgroundTint="#FFD1D1D1"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/taskRecyclerView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fabMain"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="90dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/etcbutton"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:visibility="invisible"
            app:backgroundTint="@android:color/transparent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/taskbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fabOption1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="-10dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/taskbutton"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:visibility="invisible"
            app:backgroundTint="@android:color/transparent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/schedulebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/taskbutton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-30dp"
            android:foreground="@drawable/schedulebutton"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:visibility="invisible"
            app:backgroundTint="@android:color/transparent" />


</RelativeLayout>