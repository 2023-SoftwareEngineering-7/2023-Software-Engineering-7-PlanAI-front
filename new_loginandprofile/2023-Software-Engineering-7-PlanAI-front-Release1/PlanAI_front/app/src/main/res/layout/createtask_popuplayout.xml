<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="600dp"
        android:layout_gravity="center">
    <!--상단 배너-->
    <TextView
            android:id="@+id/taskBackGround"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#E5EAF1"
            android:gravity="center"
            android:text="TASK 등록"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumbarungothicbold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <TextView
            android:id="@+id/taskSummaryText"
            android:text="제목: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/taskBackGround"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <EditText
            android:id="@+id/taskSummaryView"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:minHeight="24dp"
            app:layout_constraintStart_toEndOf="@+id/taskSummaryText"
            app:layout_constraintTop_toTopOf="@+id/taskSummaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="-10dp" />

    <!--시작일 설정부-->
    <TextView
            android:id="@+id/taskDeadLineText"
            android:text="마감일: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/taskSummaryText"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <TextView
            android:id="@+id/taskDeadLineDateView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/taskDeadLineText"
            app:layout_constraintTop_toTopOf="@+id/taskDeadLineText"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginTop="-15dp" />

    <View
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/taskDeadLineDateView"
            app:layout_constraintEnd_toEndOf="@+id/taskDeadLineDateView"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineDateView"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000000"
            android:foregroundTint="#000000" />

    <ImageView
            android:id="@+id/taskDeadLineCalendarButtonView"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@+id/taskDeadLineDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/taskDeadLineDateView"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp" />

    <!--종료시간 설정부-->
    <TextView
            android:id="@+id/taskDeadLineTimeView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineDateView"
            app:layout_constraintStart_toStartOf="@+id/taskDeadLineDateView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom" />

    <View
            android:id="@+id/taskDeadLineBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineTimeView"
            app:layout_constraintStart_toStartOf="@+id/taskDeadLineTimeView"
            app:layout_constraintEnd_toEndOf="@+id/taskDeadLineTimeView"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/taskDeadLineTimeButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:focusable="false"
            android:inputType="datetime|time"
            android:foreground="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@+id/taskDeadLineDateView"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/taskDeadLineTimeView"
            android:textAllCaps="true"
            android:drawablePadding="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp" />

    <!--  태그 생성-->

    <TextView
            android:id="@+id/taskTagText"
            android:text="태그: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineBottomView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <Button
            android:id="@+id/taskTagShowDropDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#C8F4C8"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/taskTagText"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineBottomView"
            android:layout_marginStart="132dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/taskTagText"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#000000"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.562" />

    <TextView
            android:id="@+id/taskTagView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/taskDeadLineBottomView"
            app:layout_constraintStart_toStartOf="@+id/taskDeadLineBottomView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:textColor="@color/black" />

    <View
            android:id="@+id/taskTagBottomView"
            android:layout_width="150dp"
            android:layout_height="1sp"
            android:background="#959595"
            app:layout_constraintTop_toBottomOf="@+id/taskTagView"
            app:layout_constraintStart_toStartOf="@+id/taskTagView"
            app:layout_constraintEnd_toEndOf="@+id/taskTagView"
            android:layout_marginTop="10dp" />

    <TextView
            android:id="@+id/taskPriorityText"
            android:text="우선순위: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/taskTagBottomView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <Button
            android:id="@+id/taskPriorityShowDropDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#C8F4C8"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/taskTagText"
            app:layout_constraintTop_toBottomOf="@+id/taskTagBottomView"
            android:layout_marginStart="132dp"
            android:layout_marginTop="20dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#000000"
            android:gravity="center" />


    <TextView
            android:id="@+id/taskPriorityView"
            android:layout_width="150dp"
            android:layout_height="30sp"
            android:focusable="true"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/taskTagBottomView"
            app:layout_constraintStart_toStartOf="@+id/taskTagBottomView"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:textColor="@color/black" />

        <View
                android:id="@+id/taskPriorityBottomView"
                android:layout_width="150dp"
                android:layout_height="1sp"
                android:background="#959595"
                app:layout_constraintTop_toBottomOf="@+id/taskPriorityView"
                app:layout_constraintStart_toStartOf="@+id/taskPriorityView"
                app:layout_constraintEnd_toEndOf="@+id/taskPriorityView"
                android:layout_marginTop="10dp" />
    <!-- 설명추가란-->
    <TextView
            android:id="@+id/taskDescriptionText"
            android:text="설명: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/taskPriorityText"
            android:layout_marginTop="30dp"
            android:textColorLink="@color/black"
            android:textColor="#959595"
            android:fontFamily="@font/nanumbarungothic" />

    <EditText
            android:id="@+id/taskDescriptionView"
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:minHeight="24dp"
            app:layout_constraintTop_toTopOf="@+id/taskPriorityView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="12dp" />

    <!-- chatGPT-->
    <TextView
            android:id="@+id/chatGPTBootView"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="false"
            app:layout_constraintStart_toStartOf="@+id/taskDescriptionView"
            app:layout_constraintTop_toBottomOf="@+id/taskDescriptionView"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginTop="15dp"
            android:maxLines="5"
            android:scrollHorizontally="false" />

    <View
            android:layout_width="250sp"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/chatGPTBootView"
            app:layout_constraintEnd_toEndOf="@+id/chatGPTBootView"
            app:layout_constraintTop_toBottomOf="@+id/chatGPTBootView"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" />

    <ImageView
            android:id="@+id/chatGPTBootButton"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:focusable="false"
            android:inputType="datetime|date"
            android:gravity="center_vertical"
            android:foreground="@drawable/ic_chatgpt"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/taskDescriptionText"
            android:textAllCaps="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/selected_item_background"
            android:backgroundTint="@color/black" />

    <TextView
            android:text="Boot!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatGPTBootButton"
            android:layout_marginTop="4dp"
            android:textColorLink="@color/black"
            android:textColor="#000000"
            android:fontFamily="@font/nanumbarungothic"
            android:layout_marginStart="32dp" />

    <Button
            android:id="@+id/taskFinishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:backgroundTint="#EFC8C8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/chatGPTBootView" />


</androidx.constraintlayout.widget.ConstraintLayout>





